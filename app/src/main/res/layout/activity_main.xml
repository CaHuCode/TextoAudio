<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    tools:context=".MainActivity">

    <LinearLayout
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_audioOut"
            android:hint="Texto -> Audio SALIDA"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/txt_audioIn"
            android:hint="Texto -> Audio SALIDA"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/btnAudioTexto"
            android:layout_gravity="center"
            android:text="Escuchar"
            android:textColor="@color/white"
            android:backgroundTint="@color/color_boton"
            android:drawableLeft="@drawable/ic_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/txt_audio"
            android:hint="Ingrese un texto"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="20dp"/>
        <Button
            android:id="@+id/btnTextoAudio"
            android:layout_gravity="center"
            android:text="Audio"
            android:textColor="@color/white"
            android:backgroundTint="@color/color_boton"
            android:drawableLeft="@drawable/ic_volume_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>